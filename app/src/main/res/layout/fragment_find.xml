<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF4F0F0">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|center"
            android:text="发现"
            android:textColor="#000000"
            android:textSize="20dp" />

        <View
            android:id="@+id/blankwire1"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:background="#000000" />

        <Button
            android:id="@+id/add_sell_buy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/add_mybuy_and_mysale" />

        <LinearLayout
            android:id="@+id/headbar"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="1.5dp"
                android:layout_height="30dp"
                android:background="#000000" />

            <Button
                android:id="@+id/sell"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_color"
                android:text="摊位"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="30dp"
                android:background="#000000" />

            <Button
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_color"
                android:text="求购"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="30dp"
                android:background="#000000" />

        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#000000" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/find_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
